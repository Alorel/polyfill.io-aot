{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "incremental": true,
    "tsBuildInfoFile": "./.tsbuildinfo",
    "sourceMap": true,
    "stripInternal": true,
    "declaration": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "emitDecoratorMetadata": false,
    "experimentalDecorators": true,
    "target": "ES2017",
    "module": "commonjs",
    "paths": {
      "@polyfill-io-aot/common/*": [
        "./packages/common/*"
      ],
      "@polyfill-io-aot/builder/*": [
        "./packages/builder/*"
      ],
      "@polyfill-io-aot/core/*": [
        "./packages/core/*"
      ],
      "@polyfill-io-aot/express/*": [
        "./packages/express/*"
      ],
      "@polyfill-io-aot/builder-cli/*": [
        "./packages/builder-cli/*"
      ]
    }
  },
  "include": [
    "packages"
  ],
  "exclude": [
    "node_modules",
    "**/node_modules"
  ]
}
